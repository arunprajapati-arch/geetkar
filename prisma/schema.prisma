generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        String   @id @default(cuid())
  name      String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  tracks    Track[]
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("artists")
}

model Track {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id])
  @@map("tracks")
}

model Link {
  id        Int      @id @default(autoincrement())
  url       String
  type      LinkType
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("links")
}

enum LinkType {
  YOUTUBE
  SPOTIFY
  APPLE_MUSIC
  SOUNDCLOUD
  OTHER
}